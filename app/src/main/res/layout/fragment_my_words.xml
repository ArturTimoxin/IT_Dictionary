<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_myWords"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MyWordsFragment">

    <TextView
        android:id="@+id/textListIsEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/list_is_empty"
        android:textColor="@color/colorLightGrey"
        android:textSize="30sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/editFilterMyWords"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/search"
        android:inputType="text"
        android:maxLines="1" />

    <ListView
        android:id="@+id/my_words_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_listview_mywords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="20dp"
        app:backgroundTint="#000000"
        app:fabSize="normal"
        android:src="@drawable/ic_item_fab_mylistwords"
     />
</FrameLayout>